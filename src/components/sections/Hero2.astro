---
import Button from "../shared/Button.astro";

import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Info from "../cards/Info.astro";

import Title from "../shared/Title.astro";
---

<section class="relative pt-32 lg:pt-36 pl-5" dir="rtl">

<container class="w-full" dir ="rtl">
  <div class="w-full flex justify-center">
    <h1
      class=" text-5xl/tight sm:text-5xl/tight md:text-5xl/tight xl:text-6xl/tight
        font-bold text-heading-1 text-center"
    >
      ما الذي

      <span
        class="text-transparent bg-clip-text bg-gradient-to-br from-teal-900 from-20% via-yallow-400 via-30% to-teal-600"
      >
        يميزنا ؟</span
      >
    </h1>
  </div>








  <div class="w-full flex-col md:flex-row  flex justify-center">



    <div
      class="  xl:pr-2  flex w-11/12 lg:w-2/3 midmd:h-auto"
    >
      
        <img
          src="https://res.cloudinary.com/dt9k74vof/image/upload/v1716205457/copy/cards/coupon_jb7mpk.webp"
          alt="banner image"
         
          class="w-full   z-10 max-h-full "
        />
      </div>






    <div
      class="pt-8 grid grid-row-3 md:grid-cols-3 items-center gap-10 max-w-3xl m-10 text-center"
    >
      <Info
        description="لتحصل علي مكافأة تصل الي 1200 $ من دعوة صديق"
        title="ادعو الاصدقاء"
      >
        <span slot="icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="30"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-4 h-4 sm:w-5 sm:h-5"
          >
            <path
              d="M14 2a3.963 3.963 0 0 0-1.4.267 6.439 6.439 0 0 1-1.331 6.638A4 4 0 1 0 14 2Zm1 9h-1.264A6.957 6.957 0 0 1 15 15v2a2.97 2.97 0 0 1-.184 1H19a1 1 0 0 0 1-1v-1a5.006 5.006 0 0 0-5-5ZM6.5 9a4.5 4.5 0 1 0 0-9 4.5 4.5 0 0 0 0 9ZM8 10H5a5.006 5.006 0 0 0-5 5v2a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-2a5.006 5.006 0 0 0-5-5Z"
            ></path>
          </svg>
        </span>
      </Info>

      <Info
        description=" استمتع ب 150 يوم من نسخ الصفقات "
        title="انسخ الصفقات"
      >
        <span slot="icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="30"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-4 h-4 sm:w-5 sm:h-5"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13.583 5.445h.01M8.86 16.71l-6.573-6.63a.993.993 0 0 1 0-1.4l7.329-7.394A.98.98 0 0 1 10.31 1l5.734.007A1.968 1.968 0 0 1 18 2.983v5.5a.994.994 0 0 1-.316.727l-7.439 7.5a.975.975 0 0 1-1.385.001Z"
            ></path>
          </svg>
        </span>
      </Info>

      <Info
        description=" استمتع ببونص ترحيبي يصل الي 90% "
        title="احصل علي بونص"
      >
        <span slot="icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="30"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-4 h-4 sm:w-5 sm:h-5"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 2a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1M2 5h12a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1Zm8 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z"
            ></path>
          </svg>
        </span>
      </Info>
    </div>
  </div>
</container>
