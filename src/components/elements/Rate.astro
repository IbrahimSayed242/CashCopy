---
const {broker} = Astro.props
---

<div class="stars">
         

                {broker.total_rate >= 1 && broker.total_rate > 0?  
                <span class="material-symbols-outlined text-yellow-400">star_rate</span>
                    : 
                <span class="material-symbols-outlined">star_rate</span>
                
                }

                
      { broker.total_rate >= 2 ?  
        <span class="material-symbols-outlined text-yellow-400">star_rate</span>
            : 
        <span class="material-symbols-outlined">star_rate</span>
        

      }
        {        
        broker.total_rate >= 3 ?  
        <span class="material-symbols-outlined text-yellow-400">star_rate</span>
        : 
        <span class="material-symbols-outlined">star_rate</span>

        }

        {        
        broker.total_rate >= 4 ?  
        <span class="material-symbols-outlined text-yellow-400">star_rate</span>
        : 
        <span class="material-symbols-outlined">star_rate</span>

   
        }
        {        
            broker.total_rate >= 5 ?  
            <span class="material-symbols-outlined text-yellow-400">star_rate</span>
            : 
            <span class="material-symbols-outlined">star_rate</span>
    
       
            }
         
 </div>

 <style>
    .material-symbols-outlined {
      font-variation-settings:
      'FILL' 1,
      'wght' 400,
      'GRAD' 0,
      'opsz' 24
    }
    </style>