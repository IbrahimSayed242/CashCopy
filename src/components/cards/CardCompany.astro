---
import Rate from "../elements/Rate.astro"

const { broker } = Astro.props; // Get the passed data
interface data {
    id: number;
    name: string;
}
---

   <!-- start new card -->
   <div class="text-white w-auto flex flex-col items-center sm:flex-col rounded-lg bg-emerald-400 border border-3  my-5 mx-auto p-3 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 shadow-md" dir="rtl">      
      <div class="flex  justify-center  flex-col  m-2 ">
         <div>   
         </div>
        <img class="w-full h-20 rounded-full shadow-md m-auto " src={`https://alltargeting.com/${broker.logo}`}>
            <div class="flex justify-center">
               <div>
                  <p class="text-center pt-2 lg:text-xl"> تقييم الشركة </p>

                  <Rate broker = {broker} />

               </div>
         </div>        
      </div>
         <div class=" p-4  m-auto sm:border--2 sm:border-t-2 sm:border-b-2 sm:border-indigo-900" > 
        <div>
      
      <ul class="mt-3 flex flex-col space-y-2">
        <li class="flex">
            {broker.minimum_deposit? 
                <span class="material-symbols-outlined ml-2">check_circle</span>
                   :
                   <span class="material-symbols-outlined ml-2">cancel</span>
            }
            <p class="text-base text-slate-700 sm:text-lg"> <strong>${broker.minimum_deposit}</strong> الحد الأدنى للإيداع</p>
        </li>
        <li class="flex">
            {broker.demo_account? 
                <span class="material-symbols-outlined ml-2">check_circle</span>
                   :
                   <span class="material-symbols-outlined ml-2">cancel</span>
            }
            <p class="text-base text-slate-700 sm:text-lg">حساب تجريبي</p>
        </li>
        <li class="flex">
         {broker.islamic_account? 
         <span class="material-symbols-outlined ml-2">check_circle</span>
            :
            <span class="material-symbols-outlined ml-2">cancel</span>
         }
            <p class="text-base text-slate-700 sm:text-lg">حساب اسلامي</p>
        </li>
      </ul>
      </div>
                
      </div>
        
      <div class=" mt-2 md:m-2 flex flex-col justify-center  ">
        <button class="bg-yellow-600 text-white font-montserrat py-2 px-4 m-1 font-medium rounded-xl hover:bg-yellow-300 transition-all duration-300" style="box-shadow: 0 5px 10px -5px rgba(217, 119, 6, 0.6);"> <a href="https://wa.me/201063588999">فتح حساب</a></button>
           <button class="border m-2 border-indigo-800 text-indigo-900 font-montserrat py-2 px-8 font-medium rounded-xl hover:bg-indigo-900 hover:text-white transition-all duration-300">
            <a href=`../../companyDetails/${broker.name}`>مراجعة الشركة</a>
         </button>
      </div>
    <!-- end new card  -->