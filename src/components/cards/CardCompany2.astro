---
  
  
  <!-- start card component  -->
  <div class="w-[280px] md:w-[500px] lg:w-[900px] company-component flex flex-col-reverse m-2 lg:flex-row bg-gradient-to-r from-yellow-500 via-lime-500 to-green-500">
    <!-- Buttons Section -->
    <div class="buttons">
        <button class="open-account">
            <a href="https://wa.me/201063588999" >فتح حساب</a> 
        </button>
        <button class="company-details">
            <a href=`../../companyDetails/${broker.title}`>تفاصيل الشركة</a>
        </button>
    </div>

    <!-- Rating and Description Section -->
    <div class="content flex flex-col-reverse text-center">
        <div class="rating m-2">
        
                <span class="rating-number bg-red-500 rounded-full w-9 h-7 text-lg text-white font-bold mr-2">
                  {broker.total_rate}
                </span>
        
            <!-- Start Commponent Rate Star -->
           <Rate broker = {broker} />
                
        </div>
        <div class="description lg:w-[650px]">
            <p class="hidden md:block">{broker.company_description}</p>
        </div>
       
    </div>

    <!-- Company Logo and Notification Badge Section -->
        <div class="logo-section relative mb-2 lg:pl-4 lg:m-0 mx-auto w-16 border-b-2 lg:border-b-0  lg:border-l-2 border-solid border-[#e9ecef]">
            <div>
                <div class="notification-badge">{broker["total_rate"]}</div>
                <img src={`https://alltargeting.com/${broker.logo}`} alt="" class="company-logo m-auto">
            </div>
            <div class="mx-auto mt-2"> <span class=" text-center">{broker.title}</span></div>
        </div>   
</div>

  <!-- end card component  -->

  <style> 

    /* start card component  */
  .company-component {
    display: flex;
    align-items: center;
    color: white;   
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    max-width: 1100px;
    margin: 20px;
}


.buttons {
    display: flex;
    flex-direction: column;
    margin-right: 15px;
}

.buttons button {
    margin-bottom: 10px;
    padding: 7px 8px;
    border-radius: 20px;
    border: none;
    font-size: 14px;
    cursor: pointer;
}

.open-account {
    background-color: #e63946;
    color: white;
}

