  .cta-btn {
    background-color: #e74c3c;
    padding: 10px 20px;
    border-radius: 5px;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .cta-btn:hover {
    background-color: #c0392b;
  }

  /* home-brokers Section Styles */
  .home-brokers {
    background-image: url("https://res.cloudinary.com/dz2tulh9p/image/upload/v1729508752/turst_review_qnowcq.webp");
    background-size: cover;
    background-position: center  ;
    background-repeat: no-repeat;
