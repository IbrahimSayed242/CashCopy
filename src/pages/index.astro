---
import Layout from "../layouts/Layout.astro";
import Guide from "../components/cards/Guide.astro";
import CardCompany2 from "../components/cards/CardCompany2.astro";
import SimpleCard from "../components/cards/SimpleCard.astro";
import BtnLink2 from "../components/shared/BtnLink2.astro";
import Form from "../components/vue/Form.vue";

import ScrollToEndButton from "../components/elements/ScrollButton.astro"
// Fetch data before rendering the page
import { getBrokers } from "../utils/StoreData"
// Fetch the data
const { data: brokers, error, isLoading } = await getBrokers();
const allData = [{...brokers}]
const myBrokers = allData[0]["Brokers"] || []
const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;
---

  <Layout title="CouponsCopy" path={canonicalURL} description={"!كوبونز كوبي شريكك الموثوق للاستثمار والتعلم المالي . احصل علي مراجعات الوسطاء الغير متحيزة والتعلم من رؤى الخبراء انضم إلينا اليوم وابدأ رحلتك نحو النجاح ..."}> 
    
    <section class="home-brokers lg:text-2xl bg-gradient-to-r from-green-500 via-emerald-500 to-teal-500 h-40  md:h-60 mt-[67px] lg:mt-[88px]">
      <div class="overload flex flex-col lg:flex-row-reverse py-10 bg-emerald-300">
        <div class="home-brokers-content lg:w-1/2 m-auto px-2 text-center lg:px-10">
          <h1 class="text-xs md:text-md md:font-bold mb-8 md:mb-10 lg:text-3xl m-auto">نساعدك في <span style="color: #1ea078;">إختيار</span> شركة التداول <span style="color: #1ea078;">الأفضل</span> لك عبر الإنترنت </h1>
          <p class="hidden md:block text-md">
            لقد التزم فريق موقع تقييمات كوبونز كوبي بمراجعة وتقييم شركات التداول وشركات الوساطة المالية بطريقة صارمة وغير متحيزة لأي شركة تداول، يتطلب اختيار أفضل شركة تداول الكثير من المهارات والابحاث.
          </p>
        
          <BtnLink2 text="فتح حساب" href="https://wa.me/201063588999" className="flex justify-center text-sm md:text-lg m-auto mt-5 w-8  min-w-28 md:min-w-52 sm:w-max" variant="primary"/>
        </div>
      </div>
      <!-- <CardCompany /> -->
    </section>
    <!-- Features Section -->
    <section class="best-brokers flex-col justify-center items-bet text-center md:flex-row">
      <h2 class="text-emerald-700 text-xs md:text-xl lg:text-3xl text-center font-bold dark:text-white">أفضل شركات تداول مرخصة لعام 2024</h2>
      <div class="cards flex flex-col items-center">
        {myBrokers.length > 0 && myBrokers.map((broker:any) => (
         
         broker.site === 'coupons' && broker.best_broker ? <CardCompany2 broker={broker} /> : ""
          
        )) }
      </div>
      
      <!-- ... rest of the section ... -->
    </section>
    <!-- start section Company Trust -->
    <section class="company-trust mt-10 py-20 text-center">
      <h4 class="mb-20 lg:text-4xl font-bold lg:text-emerald-700 dark:text-white">شركات التداول الأكثر ثقة</h4>
      <div class="cards flex flex-col md:flex-row items-center justify-around mb-5 flex-wrap">
        {myBrokers.length > 0 && myBrokers.map((broker:any) => (
        
        broker.site === 'coupons' && broker.best_broker ? <SimpleCard broker={broker} /> : ""
        
      ))}
      
      </div>
   </section>

   <section>

    <!-- helping Section -->
    <section class="helping flex flex-col-reverse px-5 lg:p-[50px] lg:flex-row bg-[#f8f9fa]">
      <div class="img w-full lg:w-1/2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 400" class="w-full">
          <!-- خلفية -->
          <rect width="800" height="400" fill="#f8f9fa"/>
          
          <!-- نمط الشبكة في الخلفية -->
          <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#e9ecef" stroke-width="0.5"/>
          </pattern>
          <rect width="800" height="400" fill="url(#grid)"/>
          
          <!-- رسم بياني في الخلفية -->
          <path d="M 50,300 L 150,250 250,280 350,200 450,220 550,180 650,150 750,190" 
                fill="none" 
                stroke="#4CAF50" 
                stroke-width="3"/>
                
          <!-- أيقونات ورموز -->
          <!-- شعار الدولار -->
          <circle cx="200" cy="150" r="40" fill="#2196F3" opacity="0.1"/>
          <text x="200" y="165" text-anchor="middle" fill="#2196F3" font-size="40">$</text>
          
          <!-- رمز اليورو -->
          <circle cx="400" cy="150" r="40" fill="#4CAF50" opacity="0.1"/>
          <text x="400" y="165" text-anchor="middle" fill="#4CAF50" font-size="40">€</text>
          
          <!-- رمز الجنيه -->
          <circle cx="600" cy="150" r="40" fill="#FFC107" opacity="0.1"/>
          <text x="600" y="165" text-anchor="middle" fill="#FFC107" font-size="40">£</text>
          
          <!-- نجوم التقييم -->
          <g transform="translate(350,300)">
            <path d="M 0,-10 L 2,-3 9,-3 4,1 6,8 0,4 -6,8 -4,1 -9,-3 -2,-3 z" fill="#FFC107"/>
            <path d="M 25,-10 L 27,-3 34,-3 29,1 31,8 25,4 19,8 21,1 16,-3 23,-3 z" fill="#FFC107"/>
            <path d="M 50,-10 L 52,-3 59,-3 54,1 56,8 50,4 44,8 46,1 41,-3 48,-3 z" fill="#FFC107"/>
            <path d="M 75,-10 L 77,-3 84,-3 79,1 81,8 75,4 69,8 71,1 66,-3 73,-3 z" fill="#FFC107"/>
            <path d="M 100,-10 L 102,-3 109,-3 104,1 106,8 100,4 94,8 96,1 91,-3 98,-3 z" fill="#FFC107"/>
          </g>
          
          <!-- أشكال هندسية تزيينية -->
          <circle cx="100" cy="350" r="20" fill="#E91E63" opacity="0.1"/>
          <rect x="680" y="320" width="40" height="40" fill="#9C27B0" opacity="0.1"/>
          <polygon points="150,380 170,350 190,380" fill="#FF9800" opacity="0.1"/>
        </svg>
      </div>
      <div class="text w-full lg:w-1/2">
        <h3 class="lg:text-3xl my-7 text-emerald-700 text-center lg:text-right font-bold text-md dark:text-white">مساعدة في اختيار وسيط تداول</h3>
        <div class="helping-item">
          <p class=" m-auto lg:ml-5 text-sm md:text-xl lg:text-right text-center lg:text-xl text-emerald-900 dark:text-white">
            مهمتنا هي تقديم مراجعات متعمقة وغير متحيزة لوسطاء الفوركس وشركات التداول، وإنشاء محتوى عالي الجودة حول صناعة التداول العالمية. منذ البداية، ساعد موقع تقييمات كوبون كوبي الالاف من المتداولين على مقارنة واختيار أفضل وسطاء الفوركس وعقود الفروقات.
  
            دعنا نساعدك على دخول عالم التداول مع شركة التداول الأنسب لك.
          </p>
          <BtnLink2 text="طلب استشارة مجانية" href="https://wa.me/201063588999" className="flex justify-center m-auto mt-5 w-1/2  min-w-52 sm:w-max" variant="primary"/>
        </div>
      </div>
     
      
    </section>

    <!-- Trading Guide -->
    <section class="trading-guide text-center my-20">
      <h3 class="lg:text-4xl text-xl font-bold m-3 text-emerald-700 dark:text-white">دليل التداول</h3>
      <p class="lg:mb-10 m-auto lg:w-1/2 lg:text-2xl text-lg w-4/5 mb-4 hidden md:block dark:text-white">
        يتعمق فريقنا من محترفين التداول في الأسواق المالية المحلية والعالمية والهيئات التنظيمية لمساعدتك في اختيار أفضل شركة تداول – أينما كنت تقيم.
      </p>
      <div class="cards-guide flex flex-col md:flex-row flex-wrap items-center justify-center">
        <Guide title="الكويت"/>
        <Guide title="السعودية"/>
        <Guide title="الامارات"/>
        <Guide title="مصر"/>
      </div>
      <div class="flex justify-center w-1/2 md:w-1/6 bg-emerald-200 text-emerald-700 text-lg mx-auto mt-4 h-10 items-center rounded-lg">
        <span class="material-symbols-outlined">
          arrow_left_alt
        </span>
        <a href="/brokers" class="text-xs">جميع شركات التداول</a>
      </div>
    </section>
    
      <Form client:only="vue" />
      <!-- <Form2 /> -->

    </section>
    <ScrollToEndButton />
  </Layout> 
<!--Start Css Section -->
